{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Dryck",
	"patterns": [
		{
			"include": "#headings"
		},
		{
			"include": "#list-items"
		},
		{
			"include": "#emphasis"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"headings": {
			"patterns": [
				{
					"name": "heading.1.markdown",
					"match": "^#\\s+.*$"
				},
				{
					"name": "heading.2.markdown",
					"match": "^##\\s+.*$"
				},
				{
					"name": "heading.3.markdown",
					"match": "^###\\s+.*$"
				},
				{
					"name": "heading.4.markdown",
					"match": "^####\\s+.*$"
				},
				{
					"name": "heading.5.markdown",
					"match": "^#####\\s+.*$"
				},
				{
					"name": "heading.6.markdown",
					"match": "^######\\s+.*$"
				}
			]
		},
		"list-items": {
			"patterns": [
				{
					"name": "markup.list.unnumbered.markdown",
					"begin": "^(\\s*)([-*+])\\s",
					"while": "^(?=\\s+\\S)",
					"beginCaptures": {
						"2": { "name": "punctuation.definition.list.begin.markdown" }
					}
				},
				{
					"name": "markup.list.numbered.markdown",
					"begin": "^(\\s*)([0-9]+[.)])\\s",
					"while": "^(?=\\s+\\S)",
					"beginCaptures": {
						"2": { "name": "punctuation.definition.list.begin.markdown" }
					}
				}
			]
		},
		"emphasis": {
			"patterns": [
				{
					"name": "markup.bold.markdown",
					"match": "(\\*\\*)([^*]+)(\\*\\*)",
					"captures": {
						"1": { "name": "punctuation.definition.bold.markdown" },
						"3": { "name": "punctuation.definition.bold.markdown" }
					}
				},
				{
					"name": "markup.italic.markdown",
					"match": "(\\*)([^*]+)(\\*)",
					"captures": {
						"1": { "name": "punctuation.definition.italic.markdown" },
						"3": { "name": "punctuation.definition.italic.markdown" }
					}
				}
			]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.dryck",
				"match": "â—Š([a-zA-Z_]*)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.dryck",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.dryck",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.dryck"
}